#!/usr/bin/env ruby
$:.push File.expand_path("../../lib", __FILE__)
require 'nexus_cli'

# https://github.com/nahi/httpclient/issues/242
# noinspection RubyGlobalVariableNamingConvention
$VERBOSE = nil

begin
  NexusCli::Cli.start
rescue NexusCli::NexusCliError => e
  NexusCli.ui.say e.message, :red
  exit e.status_code
end
